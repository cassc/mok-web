{
  "name": "mok-web",
  "version": "1.0.0",
  "description": "mok-web sass",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss resources/public/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss resources/public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' resources/public/css/style.comp.css -o resources/public/css/style.prefix.css",
    "compress:css": "node-sass resources/public/css/style.prefix.css resources/public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Chen Li",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
